<div class="row welcome">
  <div class="col-md-6">
    <%= image_tag "beer_bear.png", alt: "beer_bear", class: "img-rounded" %>
  </div>
  <div class="col-md-6">
    <h1>Table-Hub</h1>
    <p class="lead">Que vous soyez un bar ou un restaurant, assurez facilement votre présence en ligne et gagnez de nouveaux clients.</p>

    <div class="">
      <div class="row">
        <div class="col-sm-offset-2 col-sm-8">
          <%= form_for(@user) do |f| %>
            <%= render 'shared/error_messages' %>
            <div class="form-group">
              <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
            </div>

            <div class="form-group">
              <%= f.password_field :password, class: "form-control", placeholder: "Mot de passe" %>
            </div>

            <div class="form-group">
              <%= f.submit "Créer mon compte", class: "btn btn-lg btn-primary btn-block" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>