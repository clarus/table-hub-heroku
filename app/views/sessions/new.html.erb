<% provide(:title, "Se connecter") %>
<h1>Se connecter</h1>
<div class="row">
  <div class="col-md-6">
    <%= form_for(:session, url: sessions_path) do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "Mot de passe" %>
        <%= f.password_field :password, class: "form-control" %>
      </div>

      <%= f.submit "Se connecter", class: "btn btn-large btn-primary" %>
    <% end %>

    <p>Vous êtes nouveau&nbsp;? <%= link_to "créez un compte !", signup_path %></p>
  </div>
</div>